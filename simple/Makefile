# This Makefile was automatically generated by genmake and should be generally
# useful for your C/C++ project. You should further adjust it as needed.

CC       = gcc
CXX      = g++
CCFLAGS  = -Wall -march=native -O2 -g -pg -std=c99
CXXFLAGS = -Wall -march=native -O2 -g -pg -std=c++17
LDCC     = $(CXX) $(CXXFLAGS)
LD_FLAGS = -lm

CSRC  = 
CINC  = 
COBJ := $(CSRC:.c=.o)

CXXSRC  = ./wave.cc
CXXINC  = $(CINC) ./types.hh ./Gridfunction.hh
CXXOBJ := $(CXXSRC:.cc=.o)

EXE = wave

all: $(EXE) 

$(EXE): $(COBJ) $(CXXOBJ)
	$(LDCC) $^ -o $@ $(LD_FLAGS)

$(COBJ) : %.o : %.c $(CINC)
	$(CC) $(CFLAGS) -c $< -o $@

$(CXXOBJ) : %.o : %.cc $(CXXINC) $(CINC)
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(EXE) $(COBJ) $(CXXOBJ)
